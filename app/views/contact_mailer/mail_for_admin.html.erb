  <table style="width: 100%;text-align:left;vertical-align:top;">
    <tr>
      <th>件名：</th>
      <td><%= @contact.title %></td>
    </tr>
    <tr>
      <th>内容：</th>
      <td><%= simple_format(@contact.content) %></td>
    </tr>
  </table>
</div>


