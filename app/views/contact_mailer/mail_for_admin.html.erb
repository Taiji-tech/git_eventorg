  <h3>１．お問い合わせユーザー情報</h3>
  <table style="width: 100%;text-align:left;vertical-align:top;">
    <tr>
      <th style="width: 4rem">名前　：</th>
      <td><%= @contact.name %></td>
    </tr>
    <tr>
      <th>E-mail： </th>
      <td><%= @contact.email %></td>
    </tr>
  </table>
</div>

<div style="padding:1rem 0;">
