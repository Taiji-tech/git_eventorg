<div class='container'>
  <div class="page-title">
    <h1>イベント一覧</h1>
  </div>
  
  <div class="">
    <!--各イベント表示-->
    <div class="event">
      <% @events.each do |event| %>
      <div class="event-box box-wrap">
        <div class="event-box__detail">
          <p><span>開催日時</span>&#058; <%= event.start.strftime("%-m月%-d日(%a) %H:%M %p") %></p>
          <p><span>イベント</span>&#058; <%= event.title %></p>
          <p><span>開催場所</span>&#058; <%= event.venue %></p>
          <p><span>定員</span>&#058; <%= event.capacity %></p>
          <p><span>主催者</span>&#058; <%= event.user.nickname %></p>
        </div>
        
        <div class="event-box__img">
          <%= image_tag 'Cooking_sample.jpg' %>
        </div>
        
        <div class="event-box__btn">
          <p class=" btn-hover blue-btn"><%= link_to "詳細をみる", event_path(event.id) %></p>
        </div>
      </div>
      <% end %>
      <%= paginate(@events) %>
    </div>
  </div>
</div>