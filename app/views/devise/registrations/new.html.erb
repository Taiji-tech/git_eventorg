<div class="user">
  <div class="page-title">
    <h1>新規ユーザー登録</h1>
  </div>
  <div class="user-form">
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "shared/error_notice", model: resource %>
    <div class="user-form__box">
      <p><i class="fa fa-user-o" aria-hidden="true"></i></p>
      <%= f.text_field :nickname, autofocus: true, placeholder: "名前", class: "" %>
    </div>

    <% end %>
    
    <div class="user-form__link user-form__notice">
      <p>アカウントをお持ちの方はこちら</p>
      <p class="">
        <%= link_to "ログイン", new_user_session_path, class:"wide-submit-btn btn-hover grey-btn" %>
      </p>
    </div>
    
  </div>
</div>  
