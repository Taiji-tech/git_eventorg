<% provide(:title, "パスワード再設定") %>


<div class="user">
  <div class="page-title">
    <h1>パスワード再設定</h1>
  </div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>
  
    <div class="user-form__box">
      <p><i class="fa fa-lock" aria-hidden="true"></i></p>
      <% if @minimum_password_length %>
        <% @caution = @minimum_password_length.to_s + "文字以上" %>
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "新しいパスワード", class: "" %>
    </div>
    <div class="user-form__box">
      <p><i class="fa fa-lock" aria-hidden="true"></i></p>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "新しいパスワード（確認）", class: "" %>
    </div>
    <div class="user-form__submit-box">
      <%= f.submit "パスワードの再設定", class:"wide-submit-btn btn-hover blue-btn" %>
    </div>
  <% end %>

</div>  


